<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Tabs="clr-namespace:EnhancedCombatTracker.Tabs"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EnhancedCombatTracker.MainWindow"
        Title="EnhancedCombatTracker">
    <TabControl Name="Tabs"><!-- ItemsCollectionChanged="ItemsCollectionChanged"-->
        <TabItem Header="Plugins" VerticalContentAlignment="Center" Name="Plugins">
            <Tabs:PluginsTab />
        </TabItem>
        <TabItem Header="Settings" VerticalContentAlignment="Center" Name="Settings">
            <Tabs:SettingsTab />
        </TabItem>
    </TabControl>
</Window>
